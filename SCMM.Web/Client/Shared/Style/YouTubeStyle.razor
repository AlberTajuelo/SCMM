@inherits StyleComponentBase
<style data-name="YouTube">
    
    .YouTube-Container {
        width: 100%;
        min-width: 720px;
        padding-bottom: 56.25%; /* 16:9 */
        position: relative;
    }

    .YouTube-Container > iframe {
        position: absolute;
        top: 0;
        bottom: 0;
        left: 0;
        right: 0;
    }

</style>