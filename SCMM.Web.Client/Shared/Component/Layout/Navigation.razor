@namespace SCMM.Web.Client.Shared.Component.Layout
@inherits NavigationComponent

<List
    RootRef="@RootRef"
    Class="@_Class"
    Style="@_Style"
    @attributes="Attributes">
    @foreach(var item in Items)
    {
        @if (item != null)
        {
            <ListItem
                @key="@item.Title"
                Class="@_ItemClass"
                Style="@_ItemStyle"
                NoWrap
                DisableGutters
                Disabled="@item.Disabled"
                Button>
                @if (item.OnClick != null)
                {
                    <NavLink
                        class="@($"{context.Class} {_LinkClass}")"
                        style="@($"{_LinkStyle}")"
                        @onclick="@item.OnClick">
                        <ListItemIcon
                            Class="@_IconClass"
                            Style="@_IconStyle">
                            @item.Icon
                        </ListItemIcon>
                        <ListItemText Primary="@item.Title"
                                      Secondary="@item.SubTitle" />
                    </NavLink>
                }
                else
                {
                    <NavLink
                        ActiveClass="@_ActiveClass"
                        class="@($"{context.Class} {_LinkClass}")"
                        style="@($"{_LinkStyle}")"
                        href="@item.Path"
                        Match="@(item.Prefix ? NavLinkMatch.Prefix : NavLinkMatch.All)">
                        <ListItemIcon
                            Class="@_IconClass"
                            Style="@_IconStyle">
                            @item.Icon
                        </ListItemIcon>
                        <ListItemText Primary="@item.Title"
                                      Secondary="@item.SubTitle" />
                    </NavLink>
                }
            </ListItem>
        }
        else
        {
            <Divider />
        }
    }
</List>
