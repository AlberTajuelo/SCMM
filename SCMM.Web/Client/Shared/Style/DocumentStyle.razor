@inherits StyleComponentBase
<style data-name="Document">

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html {
        height: 100%;
        background-color: var(--theme-custom-content-background-color, #121212) !important;
        font-family: "Roboto", "Helvetica", "Arial", sans-serif;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    body {
        height: 100%;
    }

    a {
        color: inherit;
        text-decoration: none;
        font-weight: bold;
    }

    a:hover {
        text-decoration: underline;
    }

    .align-top {
        vertical-align: top;
    }

</style>