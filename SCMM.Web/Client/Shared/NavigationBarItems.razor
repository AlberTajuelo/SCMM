@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <BarItem>
            <BarLink Clicked="@ViewInventory">Inventory</BarLink>
        </BarItem>
        <BarItem>
            <BarLink Clicked="@ViewHistory">History</BarLink>
        </BarItem>
    </Authorized>
</AuthorizeView>
<BarItem>
    <BarLink Clicked="@ViewMarket">Marketplace</BarLink>
</BarItem>
<BarItem>
    <BarLink Clicked="@ViewStore">Store</BarLink>
</BarItem>
<BarItem>
    <BarLink Clicked="@ViewWorkshop">Workshop</BarLink>
</BarItem>

@code{

    void ViewInventory()
    {
        Navigation.NavigateTo("steam/inventory");
    }

    void ViewHistory()
    {
        Navigation.NavigateTo("steam/history");
    }

    void ViewMarket()
    {
        Navigation.NavigateTo("steam/market");
    }

    void ViewStore()
    {
        Navigation.NavigateTo("steam/store");
    }

    void ViewWorkshop()
    {
        Navigation.NavigateTo("steam/workshop");
    }

}
