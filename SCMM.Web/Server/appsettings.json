{
  "ConnectionStrings": {
    "IdentityDbConnection": null,
    "SteamDbConnection": null
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Jobs": {

    // AUTO-START JOBS

    // FREQUENT JOBS
    "CheckForMissingMarketItemIdsJob": {
      "StartImmediately": false,
      "CronExpression": "0/10 * * * *" // every 10mins (calls missing only)
    },
    "CheckForMissingAssetTagsJob": {
      "StartImmediately": false,
      "CronExpression": "0/10 * * * *" // every 10mins (calls missing only)
    },
    "UpdateStoreWorkshopStatisticsJob": {
      "StartImmediately": false,
      "CronExpression": "0/15 * * * *" // every 15 minutes (~2400 calls per day)
    },
    "UpdateMarketItemOrdersJob": {
      "StartImmediately": false,
      "CronExpression": "0/20 * * * *" // every 20 minutes (~3000 calls per day)
    },
    "UpdateMarketItemSalesJob": {
      "StartImmediately": false,
      "CronExpression": "0/20 * * * *" // every 20 minutes (~3000 calls per day)
    },

    // INFREQUENT JOBS
    "UpdateAssetWorkshopStatisticsJob": {
      "StartImmediately": false,
      "CronExpression": "0 2 * * *" // every day, 2am (~2400 calls per day)
    },
    "CheckForNewMarketItemsJob": {
      "StartImmediately": false,
      "CronExpression": "0 1 * * *" // every day, 1am (~25 calls per day)
    },
    "CheckForNewStoreItemsJob": {
      "StartImmediately": false,
      "CronExpression": "0 1-13 * * FRI-SAT" // store normally updates weekly around 7:00 Friday NZT
    },

    // MANUAL JOBS
    "CheckForMissingAppFiltersJob": {
      "StartImmediately": false
    },
    "RecalculateMarketItemSnapshotsJob": {
      "StartImmediately": false
    }

  },
  "IdentityServer": {
    "Clients": {
      "SCMM.Web.Client": {
        "Profile": "IdentityServerSPA"
      }
    },
    "Key": {
      "Type": "Development"
    }
  },
  "Steam": {
    "ApplicationKey": null,
  },
  "AllowedHosts": "*"
}
