@namespace SCMM.Web.Client.Pages.Steam.Inventory
@using SCMM.Web.Shared.Domain.DTOs.InventoryItems
@inherits ComponentBase

<div style=" display: flex; align-items: center; align-content: center; padding: 8px;">
    <Avatar style="min-width:42px; min-height:42px; max-width:48px; max-height:48px; padding:5px; display:flex">
        <img src="@Profile.AvatarLargeUrl" style="min-width:42px; min-height:42px; max-width:48px; max-height:48px;" />
    </Avatar>
    <div style="display: inline-block; padding: 0px 16px;">
        <Typography Variant="@TypographyVariant.Body2">
            @Profile.Name
        </Typography>
        <Typography Variant="@TypographyVariant.Subtitle2" Color="@Color.TextSecondary">
            @(String.IsNullOrEmpty(Profile.ProfileId) ? Profile.SteamId : Profile.ProfileId)
        </Typography>
    </div>
</div>

@code {

    [Parameter]
    public ProfileInventoryDetailsDTO Profile { get; set; }

}
