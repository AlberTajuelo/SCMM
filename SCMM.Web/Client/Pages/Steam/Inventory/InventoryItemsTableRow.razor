@namespace SCMM.Web.Client.Pages.Steam.Inventory
@using SCMM.Web.Shared.Domain.DTOs.InventoryItems;
@using SCMM.Web.Shared.Domain.DTOs.MarketItems;
@using SCMM.Web.Shared
@inherits ComponentBase
@inject HttpClient Http

<TableRow @key="@Item.Id" Hover>
    <TableCell Class="@GetItemClass()">
        <img src="@Item.IconUrl" style="max-width:32px; max-height:32px; margin:-4px 0px;" />
    </TableCell>
    <TableCell Component="th" Scope="row" Class="@GetItemClass()">
        <strong>@Item.Name</strong>
    </TableCell>
    <TableCell Class="@GetItemClass()">
        @Item.Quantity.ToQuantityString()
    </TableCell>
    <TableCell Class="@GetItemClass()">
        <InputBase Margin="@Margin.None" Style="width:70px" PlaceHolder="Price" Value="@Value"
                   OnChange="@((e) => UpdateItemPrice(e.Value.ToString()))">
            <StartAdornment>
                <span style="padding-right: 5px;">@State.CurrencyLocal.PrefixText</span>
            </StartAdornment>
        </InputBase>
    </TableCell>
    <TableCell Class="@GetItemClass()">
        @if (Item.MarketItem != null)
        {
            @State.ToLocalPriceText(Item.MarketItem.Last1hrValue, Item.MarketItem.Currency)
        }
        else
        {
            <span>—</span>
        }
    </TableCell>
    <TableCell Class="@GetItemClass()">
        @if (Item.MarketItem != null)
        {
            @State.ToLocalPriceText(Item.MarketItem.ResellPrice, Item.MarketItem.Currency) 
        }
        else
        {
            <span>—</span>
        }
    </TableCell>
    <TableCell Class="@GetItemClass()">
        @if (Item.MarketItem != null)
        {
            @State.ToLocalPriceText(Item.MarketItem.ResellTax, Item.MarketItem.Currency) 
        }
        else
        {
            <span>—</span>
        }
    </TableCell>
    <TableCell Class="@GetItemClass()">
        @if (Item.MarketItem != null && Item.BuyPrice > 0)
        {
            @State.ToLocalPriceText(Item.MarketItem.ResellPrice - Item.MarketItem.ResellTax - Item.BuyPrice.Value, Item.MarketItem.Currency) 
        }
        else
        {
            <span>—</span>
        }
    </TableCell>
    <TableCell Class="@GetItemClass()">
        @if (Item.MarketItem != null && Item.BuyPrice > 0)
        {@(((int)Math.Round(((decimal)(Item.MarketItem.ResellPrice - Item.MarketItem.ResellTax) / Item.BuyPrice.Value) * 100, 0)).ToRoIString()) 
        }
        else
        {
            <span>∞</span>
        }
    </TableCell>
</TableRow>

@code { 

    [CascadingParameter]
    public AppState State { get; set; }

    [Parameter]
    public InventoryItemListDTO Item { get; set; }

    public string Value { get; set; }

    protected override void OnInitialized()
    {
        Value = (Item.BuyPrice != null ? Item.Currency?.ToPriceString(Item.BuyPrice.Value, dense: true) : null);
    }

    private string GetItemClass()
    {
        if (Item.BuyPrice == 0 || Item.BuyPrice == null || Item.MarketItem == null)
        {
            return null;
        }
        var roi = ((int)Math.Round(((decimal)(Item.MarketItem.ResellPrice - Item.MarketItem.ResellTax) / Item.BuyPrice.Value) * 100, 0));
        if (roi >= 100)
        {
            return "Background-Success";
        }
        if (roi < 100)
        {
            return "Background-Error";
        }
        return null;
    }

    private async Task UpdateItemPrice(string value)
    {
        var buyPrice = SCMM.Steam.Shared.SteamEconomyHelper.GetPriceValueAsInt(value);
        if (buyPrice != Item.BuyPrice)
        {
            Item.Currency = State.CurrencyLocal;
            Item.BuyPrice = SCMM.Steam.Shared.SteamEconomyHelper.GetPriceValueAsInt(value);
            await Http.PutAsJsonAsync($"InventoryItems/item/{Item.Id}", new UpdateInventoryItemPriceCommand()
            {
                CurrencyId = State.CurrencyLocal.Id,
                Price = value
            });
        }
    }

}
