@inherits StyleComponentBase
<style data-name="Color">

    .Text-Success {
        color: #a7ec2e;
    }

    .Text-Error {
        color: #f15840;
    }

    .Text-Info {
        color: #35a3f1;
    }

    .Theme-Success {
        --theme-palette-primary-main: #388e3c;
        --theme-palette-primary-current: #4caf50;
    }

    .Theme-Error {
        --theme-palette-primary-main: #d32f2f;
        --theme-palette-primary-current: #f44336;
    }

    .Theme-Info {
        --theme-palette-primary-main: #2196f3;
        --theme-palette-primary-current: #42a5f5;
    }

</style>