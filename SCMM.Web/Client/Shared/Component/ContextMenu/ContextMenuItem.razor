@namespace SCMM.Web.Client.Shared.Component.ContextMenu
@inherits ContextMenuItemComponent

<ListItem
    Button
    RootRef="@ContentRef"
    Class="@_Class"
    Style="@_Style"
    Component="@Component"
    Selected="@Selected"
    DisableGutters="@DisableGutters"
    Disabled="@Disabled"
    TabIndex="@_TabIndex"
    AutoFocus="@_AutoFocus"
    DenseClass="@(ToClass("Dense"))"
    OnClick="@CloseMenuAndHandleClickAsync"
    OnKeyDown="@CloseMenuAndHandleKeyDownAsync"
    @attributes="Attributes">
    @ChildContent
</ListItem>
