@namespace SCMM.Web.Client.Shared.Component.Layout
@inherits ProfileComponent

<Component
    RootRef="@RootRef"
    Tag="@Component"
    Class="@_Class"
    Style="@_Style"
    @attributes="Attributes">
    <NavLink
        href="authentication/profile"
        Match="@NavLinkMatch.Prefix">
        <Avatar
            Class="@_AvatarClass"
            Style="@_AvatarStyle"
            Alt="Person"
            Src="@Avatar" />
    </NavLink>
    <Typography
        Class="@_NameClass"
        Style="@_NameStyle"
        Variant="@TypographyVariant.H6">
        @Name
    </Typography>
    <Typography 
        Variant="@TypographyVariant.Body2"
        Color="@Color.TextSecondary">
        @SubTitle
    </Typography>
</Component>
