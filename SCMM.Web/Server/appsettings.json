{
  "ConnectionStrings": {
    "IdentityDbConnection": "Server=(localdb)\\mssqllocaldb;Database=SCMM.Identity;Trusted_Connection=True;MultipleActiveResultSets=true",
    "SteamDbConnection": "Server=(localdb)\\mssqllocaldb;Database=SCMM.Steam;Trusted_Connection=True;MultipleActiveResultSets=true"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Jobs": {
    "CheckForNewSteamItemsJob": {
      "StartImmediately": false,
      "CronExpression": "0 0/6 * * *" // every 6 hours
    },
    "ResolveMissingSteamItemIdsJob": {
      "StartImmediately": true,
      "CronExpression": "0 0/1 * * *" // every hour
    }
  },
  "IdentityServer": {
    "Clients": {
      "SCMM.Web.Client": {
        "Profile": "IdentityServerSPA"
      }
    }
  },
"AllowedHosts": "*"
}
