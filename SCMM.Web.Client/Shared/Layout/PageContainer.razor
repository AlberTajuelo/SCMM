@namespace SCMM.Web.Client.Shared.Layout

@if (!String.IsNullOrEmpty(Title))
{
    <Title Value="@Title" />
}

<div class="ma-6" @attributes="AdditionalAttributes">
    @ChildContent
</div>

@if (ScrollTopTop)
{
    <MudScrollToTop Selector=".mud-main-content">
        <MudHidden Breakpoint="MudBlazor.Breakpoint.MdAndUp" Invert="true">
            <MudButton Variant="Variant.Filled" StartIcon="fas fa-fw fa-arrow-up" Color="MudBlazor.Color.Secondary">Go to top</MudButton>
        </MudHidden>
        <MudHidden Breakpoint="MudBlazor.Breakpoint.SmAndDown" Invert="true">
            <MudIconButton Variant="Variant.Filled" Icon="fas fa-fw fa-arrow-up" Color="MudBlazor.Color.Secondary"></MudIconButton>
        </MudHidden>
    </MudScrollToTop>
}

@code {

    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool ScrollTopTop { get; set; } = true;

    [Parameter(CaptureUnmatchedValues = true)]
    public IDictionary<string, object> AdditionalAttributes { get; set; }
    
}
