@inherits ResponsiveDialog

<MudDialog>
    <TitleContent>
        <MudText Typo="MudBlazor.Typo.h6" Color="MudBlazor.Color.Default">Donate and show your support</MudText>
    </TitleContent>
    <DialogContent>
        <MudText Typo="MudBlazor.Typo.body2" Color="MudBlazor.Color.Secondary">
            <p>This website is free to use, but isn't free to host.</p>
            <p>If you found it useful and would like to support further development, consider buying me a drink or a Rust skin.</p>
        </MudText>
        <MudGrid Spacing="0">
            <MudItem xs="6" Class="hidden-overflow">
                <MudTooltip Text="Buy me a drink!" Inline="false">
                    <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_blank">
                        <input type="hidden" name="cmd" value="_donations" onfocus="this.blur()" />
                        <input type="hidden" name="business" value="P29WU38RQJM8J" onfocus="this.blur()" />
                        <input type="hidden" name="currency_code" value="NZD" onfocus="this.blur()" />
                        <input type="image" name="submit" src="/images/donate-paypal.png" border="0" alt="Donate with PayPal" onfocus="this.blur()" class="full-width" />
                    </form>
                </MudTooltip>
            </MudItem>
            <MudItem xs="6" Class="hidden-overflow">
                <MudTooltip Text="Send me a skin!" Inline="false">
                    <a href="https://steamcommunity.com/tradeoffer/new/?partner=121835790&token=AjBXyQhL" target="_blank">
                        <img src="/images/donate-steam.png" alt="Donate with Steam" class="full-width" />
                    </a>
                </MudTooltip>
            </MudItem>
        </MudGrid>
    </DialogContent>
</MudDialog>

@code {

    protected override void OnConfigure(ResponsiveDialogOptions options)
    {
        options.FullscreenBreakpoint = MudBlazor.Breakpoint.Xs;
        options.MaxWidth = MudBlazor.MaxWidth.ExtraSmall;
        options.CloseButton = true;
    }
    
    protected override bool ShouldRender() => false;

}
