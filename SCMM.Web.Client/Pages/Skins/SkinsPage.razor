@code {

    private PaginatedResult<ItemDescriptionWithPriceDTO> Items { get; set; }

    [Parameter]
    [SupplyParameterFromQuery]
    public string Filter { get; set; }
    
    [Parameter]
    [SupplyParameterFromQuery]
    public string ItemType { get; set; }
    
    [Parameter]
    [SupplyParameterFromQuery]
    public bool Glow { get; set; }
    
    [Parameter]
    [SupplyParameterFromQuery]
    public bool Glowsight { get; set; }
    
    [Parameter]
    [SupplyParameterFromQuery]
    public bool Cutout { get; set; }
    
    [Parameter]
    [SupplyParameterFromQuery]
    public Nullable<int> Start { get; set; }

    [Parameter]
    [SupplyParameterFromQuery]
    public Nullable<int> Count { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await RefreshItems();
    }
    
    private void OnSearch(string text)
    {
        Filter = (text ?? Filter);
        RefreshItems();
    }

    private async Task RefreshItems()
    {
        try
        {
            Items = null;
            StateHasChanged();
            Items = await Http.GetFromJsonAsync<PaginatedResult<ItemDescriptionWithPriceDTO>>(
                $"api/item?filter={Uri.EscapeDataString(Filter ?? String.Empty)}&start={Start.GetValueOrDefault(0)}&count={Count.GetValueOrDefault(300)}&itemType={Uri.EscapeDataString(ItemType ?? String.Empty)}&glow={Glow}&glowsight={Glowsight}&cutout={Cutout}"
            );
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, $"Error listing items");
        }
        finally
        {
            StateHasChanged();
        }
    }

