@inherits LayoutComponentBase

<Layout>
    <LayoutHeader Fixed="true">
        <Bar Breakpoint="Breakpoint.Desktop" Background="Background.Dark" ThemeContrast="ThemeContrast.Dark">
            <BarBrand>
                <img src="https://steamcdn-a.akamaihd.net/steamcommunity/public/images/apps/252490/820be4782639f9c4b64fa3ca7e6c26a95ae4fd1c.jpg" style="max-width:32px; max-height:32px" />
            </BarBrand>
            <BarToggler>
            </BarToggler>
            <BarMenu>
                <BarStart>
                    <AuthorizeView>
                        <Authorized>
                            <BarItem>
                                <BarLink To="/steam/inventory">Your Inventory</BarLink>
                            </BarItem>
                            <BarItem>
                                <BarLink To="/steam/history">Your History</BarLink>
                            </BarItem>
                        </Authorized>
                    </AuthorizeView>
                    <BarItem>
                        <BarLink To="/steam/items">Marketplace</BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="/steam/store">Store</BarLink>
                    </BarItem>
                    <BarItem>
                        <BarLink To="/steam/workshop">Workshop</BarLink>
                    </BarItem>
                </BarStart>
                <BarEnd>
                    <AuthenticationBarItem />
                </BarEnd>
            </BarMenu>
        </Bar>
    </LayoutHeader>
    <LayoutContent>
        <Container Fluid="true">
            @Body
        </Container>
    </LayoutContent>
</Layout>


