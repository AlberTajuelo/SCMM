{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "ConnectionStrings": {
    "SteamDbConnection": null,
    "ServiceBusConnection": null
  },
  "AzureAd": {
    "Instance": "https://login.microsoftonline.com/",
    "Domain": null,
    "ClientId": null,
    "TenantId": null,
    "CallbackPath": null
  },
  "Google": {
    "ApiKey": null
  },
  "Steam": {
    "ApplicationKey": null,
    "Username": null,
    "Password": null
  },
  "Jobs": {
    "CheckForNewStoreItemsJob": {
      "CronExpression": "* * * * *" // every minute
    },
    "CheckForNewMarketItemsJob": {
      "CronExpression": "2 * * * *", // every hour, 2 minutes after the hour
      "StartImmediately": true
    },
    "UpdateMarketItemSalesJob": {
      "CronExpression": "1-59/2 * * * *" // every odd minute
    },
    "UpdateMarketItemOrdersJob": {
      "CronExpression": "*/2 * * * *" // every even minute
    },
    "UpdateCurrentStoreStatisticsJob": {
      "CronExpression": "0/5 * * * *" // every 5 minutes
    },
    "UpdateMarketItemActivityJob": {
      "CronExpression": "0/5 * * * *" // every 5 minutes
    },
    "DeleteExpiredFileDataJob": {
      "CronExpression": "0/15 * * * *" // every 15 minutes
    },
    "UpdateAssetDescriptionsJob": {
      "CronExpression": "0/15 * * * *" // every 15 minutes
    },
    "UpdateCurrencyExchangeRatesJob": {
      "CronExpression": "55 * * * *", // every hour, 5 minutes before the hour
      "StartImmediately": true
    }
  },
  "WebsiteUrl": "https://localhost:44393",
  "AllowedHosts": "*"
}
