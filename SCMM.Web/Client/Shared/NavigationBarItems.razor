@inject NavigationManager Navigation

<AuthorizeView>
    <Authorized>
        <BarItem>
            <BarLink Clicked="@ViewYourInventory">Your Inventory</BarLink>
        </BarItem>
        <BarItem>
            <BarLink Clicked="@ViewYourHistory">Your History</BarLink>
        </BarItem>
    </Authorized>
</AuthorizeView>
<BarItem>
    <BarLink Clicked="@ViewMarketplace">Marketplace</BarLink>
</BarItem>
<BarItem>
    <BarLink Clicked="@ViewStore">Store</BarLink>
</BarItem>
<BarItem>
    <BarLink Clicked="@ViewWorkshop">Workshop</BarLink>
</BarItem>

@code{

    void ViewYourInventory()
    {
        Navigation.NavigateTo("steam/inventory");
    }

    void ViewYourHistory()
    {
        Navigation.NavigateTo("steam/history");
    }

    void ViewMarketplace()
    {
        Navigation.NavigateTo("steam/items");
    }

    void ViewStore()
    {
        Navigation.NavigateTo("steam/store");
    }

    void ViewWorkshop()
    {
        Navigation.NavigateTo("steam/workshop");
    }

}
