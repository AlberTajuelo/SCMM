@inherits LayoutComponentBase
@inject NavigationManager Navigation

<MatDrawerContainer Style="width: 100vw; height: 100vh;">
    <MatDrawer @bind-Opened="@Opened" Mode="@MatDrawerMode.Modal">
        
        <MatAppBarContainer>
            <MatAppBar Fixed="true">
                <MatAppBarRow>
                    <MatAppBarSection>
                        <MatAppBarTitle>SCMM</MatAppBarTitle>
                    </MatAppBarSection>
                </MatAppBarRow>
            </MatAppBar>
            <MatAppBarContent>
                <NavMenuVertical />
            </MatAppBarContent>
        </MatAppBarContainer>

    </MatDrawer>
    <MatDrawerContent>

        <MatAppBarContainer>
            <MatAppBar Fixed="true">
                <MatAppBarRow>
                    <MatAppBarSection>
                        <MatHidden Breakpoint="@MatBreakpoint.MD" Direction="@MatHiddenDirection.Up">
                            <ChildContent>
                                <MatIconButton Icon="@MatIconNames.Menu" OnClick="@ToggleDraw"></MatIconButton>
                            </ChildContent>
                        </MatHidden>
                        <MatAppBarTitle Class="px-3">SCMM</MatAppBarTitle>
                        <NavMenuHorizontal />
                    </MatAppBarSection>
                    <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                        <NavMenuAuth />
                    </MatAppBarSection>
                </MatAppBarRow>
            </MatAppBar>
            <MatAppBarContent>
                @Body
            </MatAppBarContent>
        </MatAppBarContainer>

    </MatDrawerContent>
</MatDrawerContainer>

@code
{
    bool Opened = false;

    void ToggleDraw()
    {
        Opened = !Opened;
    }

}