@inherits StyleComponentBase
<style data-name="Site">

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html {
        height: 100%;
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
    }

    body {
        background-color: var(--theme-custom-content-background-color, #f4f6f8) !important;
        height: 100%;
    }

    a {
        text-decoration: none;
        color: inherit;
    }

    .Theme-Success {
        --theme-palette-primary-main: #388e3c;
        --theme-palette-primary-current: #4caf50;
    }

    .Theme-Info {
        --theme-palette-primary-main: #2196f3;
        --theme-palette-primary-current: #42a5f5;
    }

    .Chart-Container {
        padding: 16px;
    }

    .Chip-Root {
        border: none;
        cursor: default;
        height: 24px;
        display: inline-flex;
        outline: 0;
        padding: 0;
        margin: 3px;
        font-size: 0.8125rem;
        box-sizing: border-box;
        transition: background-color 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms,box-shadow 300ms cubic-bezier(0.4, 0, 0.2, 1) 0ms;
        align-items: center;
        font-family: "Roboto", "Helvetica", "Arial", sans-serif;
        white-space: nowrap;
        border-radius: 16px;
        vertical-align: middle;
        justify-content: center;
        text-decoration: none;
        color: var(--theme-palette-grey-light-or-dark-contrast-text, rgba(0, 0, 0, 0.87));
        background-color: var(--theme-palette-grey-light-or-dark, #e0e0e0);
    }

    .Chip-Label {
        cursor: inherit;
        display: flex;
        align-items: center;
        user-select: none;
        white-space: nowrap;
        padding-left: 8px;
        padding-right: 8px;
    }

</style>