@namespace SCMM.Web.Client.Shared.Component.Layout
@inherits StyleComponentBase

<style data-name="Navigation">

    .Navigation-Root {
    }

    .Navigation-Root > .Divider-Root {
        margin: 16px 0px;
    }

    .Navigation-Item {
        display: flex;
        padding-top: 0;
        padding-bottom: 0;
    }

    .Navigation-Link {
        display: flex;
        align-items: center;
        text-decoration: none;
        position: relative;
        justify-content: flex-start;
        color: inherit;
        width: 100%;
        padding: 4px;
        font-weight: 500;
        letter-spacing: 0;
        text-transform: none;
        justify-content: flex-start;
    }
    
    .Navigation-Link > .ListItemText-Root > p {
        font-size: 0.8em;
        margin-top: -4px;
    }

    .Navigation-Icon {
        height: auto;
        min-width: 48px;
        color: inherit;
    }

    .Navigation-Active {
        color: var(--theme-palette-primary-main, #1976d2);
        font-weight: 500;
    }

    .Navigation-Active .Navigation-Icon {
        color: var(--theme-palette-primary-main, #1976d2);
    }

</style>
